/* pages/test/test.wxss */

.slide {
  position: static;
}

.slide-intro {
  position: absolute;
  top: 1rem;
  left: 1rem;
  z-index: 2;
  font-size: 1.1rem;
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.slide-image {
  position: relative;
  top: 0%;
  width: 100%;
  height: 100%;
}

.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  font-weight: bold;
}

.swiper-tab-item {
  display: inline-block;
  width: 33.33%;
  color: red;
}

.active {
  color: aqua;
  border-bottom: 4rpx solid red;
}

.list {
  width: 100%;
}

.item {
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
}

.img {
  justify-content: center;
  width: 30%;
  margin: 2px;
}

.text {
  width: 70%;
  margin: 2px;
  align-items: stretch;
}

.title {
  font-size: 0.9rem;
  color: #258bce;
}

.intro {
  font-size: 0.75rem;
}

.bc_green {
  background-color: green;
}

.bc_red {
  background-color: red;
}

.bc_yellow {
  background-color: yellow;
}

.bc_blue {
  background-color: blue;
}

.scroll-view-item {
  height: 200px;
}

.scroll-view_H {
  height: 100px;
  white-space: nowrap;
  display: flex;
}

.scroll-view-item_H {
  height: 100px;
  width: 200px;
  display: inline-block;
}

.demo4-2 {
  display: flex;
  display: -webkit-flex;
}

.col-left {
  width: 33%;
}

.col-middle {
  flex: 1;
  -webkit-flex: 1;
}
