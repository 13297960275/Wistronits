.navbar {
  display: flex;
  width: 100%;
  flex-direction: column;
  line-height: 80rpx;
  /* position: fixed;  *//* top: 0;  */
}

.navbar .item {
  flex: auto;
  font-size: 30rpx;
  /* text-align: center;  */
  background: #fff;
  font-weight: bold;
}

.navbar .item.active {
  color: #258bce;
  background: #dfeaff;
  /* position: relative;  */
}

.navbar .item.active::after {
  content: "";
  display: block;
  /* position: absolute;  */
  height: 4rpx;
  bottom: 0;
  left: 0;
  right: 0;
  background: #258bce;
}

.title {
  color: #258bce;
  background: #dfeaff;
  /* position: relative;  */
}


