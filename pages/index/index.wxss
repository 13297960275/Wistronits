}

.slide-intro {
  position: absolute;
  top: 1rem;
  left: 1rem;
  z-index: 2;
  font-size: 1.1rem;
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

