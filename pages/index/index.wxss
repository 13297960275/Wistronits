/**index.wxss**/
.slide {
  position: static;
}

.slide-intro {
  position: absolute;
  top: 1rem;
  left: 1rem;
  z-index: 2;
  font-size: 1.1rem;
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.slide-image {
  position: relative;
  top: 0%;
  width: 100%;
  height: 100%;
}

/** 修改默认的navigator点击态 **/

.navigator-hover {
  color: blue;
}

/** 自定义其他点击态样式类 **/

.other-navigator-hover {
  color: red;
}
